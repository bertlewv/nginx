include cache_params;
server {
        listen 80;
        listen [::]:80;
        server_name warriorsinthefield.com www.warriorsinthefield.com;
        return 302 https://$host$request_uri;
}

#HTTPS
server {
        listen 443 ssl;
        listen [::]:443 ssl;
	expires $expires;
        ssl_certificate /etc/letsencrypt/live/warriorsinthefield.com/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/warriorsinthefield.com/privkey.pem;
	include ssl_params;

        root /home/warriors/html;
        index index.php index.html index.htm;

        server_name warriorsinthefield.com www.warriorsinthefield.com;

        location / {
                # try_files $uri $uri/ =404;
                try_files $uri $uri/ /index.php?q=$uri&$args;
        }

        error_page 404 /404.html;
	access_log /home/warriors/access.log;
	error_log /home/warriors/error.log;
        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
                root /var/www/html;
        }

        location ~ \.php$ {
                try_files $uri =404;
                fastcgi_split_path_info ^(.+\.php)(/.+)$;
                fastcgi_pass unix:/run/php/php7.0-fpm-warriors.sock;
                fastcgi_index index.php;
                include fastcgi_params;
        }
}

